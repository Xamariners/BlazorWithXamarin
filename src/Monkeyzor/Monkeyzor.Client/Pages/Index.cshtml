@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<div>
    <img id="monkey" src="images/monkey-1.png"/>
    @*<img id="monkey" src="@imgUrl" />*@
</div>

<button class="btn btn-primary" onclick="changeImage()">Click Me</button>

@functions
{
    string imgUrl = "images/monkey-1.png";

    void changeImage()
    {

        string localUrl = "";

        if (imgUrl.Contains("1"))
            imgUrl = imgUrl.Replace("1", "2");
        else
            imgUrl = imgUrl.Replace("2", "1");

        localUrl = imgUrl;

    }

}
