@inject FlightSearchViewModel flightSearchViewModel

<div id="search-and-results-area">
    <div id="search-area" class="px-2 py-3">
        <Search OnSearch=flightSearchViewModel.Search />
    </div>
    <div id="results-area">
        <GreyOutZone IsGreyedOut=flightSearchViewModel.SearchInProgress>
            <SearchResults Itineraries=flightSearchViewModel.SearchResults
                           OnAddItinerary=flightSearchViewModel.AddToShortlist />
        </GreyOutZone>
    </div>
</div>
<div id="selections-area" class="p-3 pl-4">
    <Shortlist Itineraries=flightSearchViewModel.Shortlist
               OnRemoveItinerary=flightSearchViewModel.RemoveFromShortlist />
</div>

@functions
{
    protected override void OnInit()
    {
        flightSearchViewModel.OnChange += StateHasChanged;
    }
}
